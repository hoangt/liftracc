
# liftracc environment variables
# change value suiting your architecture (e.g. number of cpus)
export OMP_NUM_THREADS=16

export LIFTRACC_ROOT_DIR=$HOME/liftracc/library
export LIFTRACC_BUILD_DIR=$LIFTRACC_ROOT_DIR/build

export BLAS_ROOT_DIR=$HOME/liftracc/blas_libs/BLAS

export CBLAS_ROOT_DIR=$HOME/liftracc/blas_libs/CBLAS

export GOTO2_ROOT_DIR=$HOME/liftracc/blas_libs/GotoBLAS2

export ATLAS_ROOT_DIR=$HOME/liftracc/blas_libs/ATLAS
export ATLAS_BUILD_DIR=$ATLAS_ROOT_DIR/build

export CUDA_ROOT_DIR=/usr/local/cuda

export CLEARSPEED_ROOT_DIR=/opt/clearspeed

export USE_CBLAS_LIB=$CBLAS_ROOT_DIR/libcblas_inner.so
export USE_GOTO2_LIB=$GOTO2_ROOT_DIR/libgoto2.so
export USE_ATLAS_LIB=$ATLAS_BUILD_DIR/lib/libatlas.so
export USE_CUBLAS_LIB=$CUDA_ROOT_DIR/lib/libcublas.so
export USE_CSXL_LIB=$CLEARSPEED_ROOT_DIR/lib/libcsxl_mkl.so

export CUDA_PROFILE=0
export CS_BLAS_HOST_ASSIST_PERCENTAGE=0
export CS_HOST_BLAS=$USE_GOTO2_LIB

export LD_LIBRARY_PATH=$HOME/lib64
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$HOME/lib
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$CUDA_ROOT_DIR/lib64
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$CUDA_ROOT_DIR/lib
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$GOTO2_ROOT_DIR
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$CLEARSPEED_ROOT_DIR/lib
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$BLAS_ROOT_DIR
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$CBLAS_ROOT_DIR
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$ATLAS_BUILD_DIR/lib
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$DYNBLAS_BUILD_DIR
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$LIFTRACC_BUILD_DIR

